{
  "name": "@vivero/stoma-cli",
  "version": "0.1.0-rc.2",
  "description": "CLI for running Stoma API gateways locally â€” load a gateway file and serve it on a Node.js HTTP server.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vivero-dev/stoma.git",
    "directory": "packages/cli"
  },
  "homepage": "https://stoma.vivero.dev",
  "license": "MIT",
  "author": {
    "name": "Jonathan Bennett"
  },
  "bugs": {
    "url": "https://github.com/vivero-dev/stoma/issues"
  },
  "keywords": [
    "stoma",
    "cli",
    "api-gateway",
    "hono",
    "local-server"
  ],
  "bin": {
    "stoma": "./dist/bin.js"
  },
  "main": "./src/cli.ts",
  "types": "./src/cli.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./src/cli.ts",
      "default": "./src/cli.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "bin": {
      "stoma": "./dist/bin.js"
    },
    "main": "./dist/bin.js",
    "types": "./dist/cli.d.ts",
    "exports": {
      ".": {
        "types": "./dist/cli.d.ts",
        "import": "./dist/bin.js",
        "default": "./dist/bin.js"
      }
    }
  },
  "scripts": {
    "dev": "tsx src/bin.ts",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "echo 'no linter configured'"
