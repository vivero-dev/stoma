{
  "name": "stoma-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "packages/*",
    "docs/"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -Apt --exclude @vivero/stoma-docs run build",
    "test": "yarn workspaces foreach -Ap --exclude @vivero/stoma-docs run test",
    "typecheck": "yarn workspaces foreach -Ap --exclude @vivero/stoma-docs run typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "tsup": "^8.5.1"
  }
}
