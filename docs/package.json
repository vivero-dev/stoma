{
  "name": "@vivero/stoma-docs",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build:sw": "vite build --config vite.sw.config.ts",
    "build:stoma-bundle": "vite build --config vite.stoma-bundle.config.ts",
    "build:editor-worker": "vite build --config vite.editor-worker.config.ts",
    "build:types": "dts-bundle-generator --no-check --export-referenced-types=false --external-inlines hono -o public/stoma-bundle.d.ts src/editor/stoma-entry.ts",
    "build:assets": "yarn build:sw && yarn build:stoma-bundle && yarn build:editor-worker && yarn build:types",
    "build:check-worker": "wrangler deploy --dry-run --outdir .wrangler/tmp 2>&1 | tail -5",
    "typecheck:gateway": "typedoc --emit none --tsconfig ../packages/gateway/tsconfig.docs.json --entryPointStrategy expand --exclude '**/__tests__/**' ../packages/gateway/src/index.ts ../packages/gateway/src/policies/index.ts ../packages/gateway/src/config/index.ts ../packages/gateway/src/adapters/index.ts",
    "build": "yarn typecheck:gateway && yarn build:assets && astro build && yarn build:check-worker",
    "dev": "yarn build:assets && astro dev",
    "dev:sw": "vite build --config vite.sw.config.ts --watch",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@astrojs/starlight": "^0.37.0",
    "@monaco-editor/react": "^4.7.0",
    "astro": "^5.17.0",
    "astro-mermaid": "^1.3.1",
    "mermaid": "^11.12.2",
    "minimatch": "^10.2.4",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-json-pretty": "^2.2.0",
    "starlight-typedoc": "^0.21.5",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.6.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260213.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "dts-bundle-generator": "^9.0.0",
    "esbuild-wasm": "^0.24.2",
    "hono": "^4.7.0",
    "lz-string": "^1.5.0",
    "vite": "^6.0.0",
    "wrangler": "^4.68.0"
  }
}
