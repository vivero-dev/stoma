{
  "name": "@homegrower-club/stoma",
  "version": "0.1.0-rc.1",
  "description": "Declarative API gateway as a TypeScript library, built on Hono. Runs on Cloudflare Workers, Node.js, Deno, Bun, and any edge runtime.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HomeGrower-club/stoma.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./policies": {
      "types": "./dist/policies/index.d.ts",
      "import": "./dist/policies/index.js",
      "default": "./dist/policies/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js",
      "default": "./dist/config/index.js"
    },
    "./sdk": {
      "types": "./dist/sdk/index.d.ts",
      "import": "./dist/sdk/index.js",
      "default": "./dist/sdk/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js",
      "default": "./dist/adapters/index.js"
    },
    "./adapters/cloudflare": {
      "types": "./dist/adapters/cloudflare.d.ts",
      "import": "./dist/adapters/cloudflare.js",
      "default": "./dist/adapters/cloudflare.js"
    },
    "./adapters/deno": {
      "types": "./dist/adapters/deno.d.ts",
      "import": "./dist/adapters/deno.js",
      "default": "./dist/adapters/deno.js"
    },
    "./adapters/bun": {
      "types": "./dist/adapters/bun.d.ts",
      "import": "./dist/adapters/bun.js",
      "default": "./dist/adapters/bun.js"
    },
    "./adapters/node": {
      "types": "./dist/adapters/node.d.ts",
      "import": "./dist/adapters/node.js",
      "default": "./dist/adapters/node.js"
    },
    "./adapters/memory": {
      "types": "./dist/adapters/memory.d.ts",
      "import": "./dist/adapters/memory.js",
      "default": "./dist/adapters/memory.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "lint": "biome check src/ docs/src/",
    "lint:fix": "biome check --write src/ docs/src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "docs:dev": "cd docs && npx astro dev",
    "docs:build": "cd docs && npx astro build",
    "docs:preview": "cd docs && npx astro preview",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "prepublishOnly": "yarn build"
  },
  "packageManager": "yarn@4.12.0",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20250214.0",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vitest/expect": "3.2.4",
    "@vitest/mocker": "3.2.4",
    "@vitest/pretty-format": "3.2.4",
    "@vitest/runner": "3.2.4",
    "@vitest/snapshot": "3.2.4",
    "@vitest/spy": "3.2.4",
    "@vitest/utils": "3.2.4",
    "hono": "^4.7.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "3.2.4",
    "wrangler": "^4.65.0",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "hono": ">=4.0.0",
    "zod": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  }
}
